{
  "permissions": {
    "allow": [
      "Skill(beads:sync)",
      "WebSearch",
      "WebFetch(domain:docs.anthropic.com)"
    ]
  },
  "enabledPlugins": {
    "beads@beads-marketplace": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/validate_csv.py"
          }
        ]
      }
    ]
  }
}
